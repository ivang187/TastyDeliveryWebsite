@using TastyDelivery.Core.Models.ShoppingCart

@model Cart

<h1>Shopping Cart</h1>

@if (Model != null && Model.Products.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
    <div>Total Price: @Model.Products.Sum(item => item.Price * item.Quantity)</div>
}
else
{
    <p>Your shopping cart is empty.</p>
}
