@model IEnumerable<RestaurantsViewModel>

@{
    ViewBag.Title = "Restaurants";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <h2 class="display-4">Choose Your Restaurant</h2>
    </div>

    <div class="row justify-content-center">
        @foreach (var restaurant in Model)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("ShowMenu", "Restaurant", new { id = restaurant.Id})" class="card text-decoration-none text-dark">
                    <div class="card-body">
                        <h4 class="card-title mb-3">@restaurant.Name</h4>
                        <p class="card-text mb-2">@restaurant.Location</p>
                        <p class="card-text mb-2">Working Hours: @restaurant.WorkingHours</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
